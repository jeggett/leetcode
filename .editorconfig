# top-most EditorConfig file
root = true

[*]
insert_final_newline = true

[*.{py}]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.{js, ts}]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# Matches the exact files either package.json or .travis.yml
[{package.json}]
indent_style = space
indent_size = 2
