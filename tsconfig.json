  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "target": "esnext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "sourceMap": true
  },
  "include": ["src/typescript/"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
